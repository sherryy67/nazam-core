{
    "watch": [
        "server.js",
        "controllers/",
        "routes/",
        "models/",
        "middlewares/",
        "config/",
        "utils/"
    ],
    "ext": "js,json",
    "ignore": [
        "node_modules/",
        "*.test.js",
        "*.spec.js"
    ],
    "delay": 1000,
    "env": {
        "NODE_ENV": "development"
    }
}